<%= form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :valid_input, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valid_input, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gps_speed, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gps_speed, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :drifter_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :drifter_name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn' %>
  </div>
<% end %>
