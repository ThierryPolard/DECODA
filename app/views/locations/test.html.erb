			 var tachometer = L.AwesomeMarkers.icon({
			    icon: 'fa-tachometer',
			    prefix: 'fa',
			    markerColor:'orange'
			  });
			<% if @locations.any? %>
				<% @locations.each do |location| %>
				  L.marker([ <%= location.latitude%> , <%= location.longitude%>], {icon: tachometer}).addTo(map)
				<% end%>
			<% end%>

			var popup = L.popup();
			function onMapClick(e) {
				popup
					.setLatLng(e.latlng)
					.setContent("You clicked the map at " + e.latlng.toString())
					.openOn(map);
			}
			map.on('click', onMapClick);

	</script>
	
</div>

